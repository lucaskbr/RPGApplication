@model RPGApplication.Models.Proficiency

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Edit";
}



<section class="container-fluid bg-black">
    <section class="container">
        <div class="row mh-90-vh py-4">
            <div class="col-md-12 d-flex align-items-center justify-content-center">
                @using (Html.BeginForm("Edit", "Proficiencies", null, FormMethod.Post, new { @class = "col-md-6 text-white" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ProficiencyId)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            @Html.ValidationMessage("error", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" value="Save" class="btn btn-dark btn-block  mb-3">Salvar</button>
                            @Html.ActionLink("Voltar", "Index", null, new { @class = "text-white" })
                        </div>
                    </div>

                }
                <div class="col-md-6 text-center px-5">
                    <h3 class="text-white">Edição de proficiencias</h3>
                    <img src="/Images/Static/proficiencies.png" class="img-fluid" />
                </div>
            </div>
        </div>
    </section>
</section>