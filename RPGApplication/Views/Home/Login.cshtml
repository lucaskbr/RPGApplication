@model RPGApplication.Models.User

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Login";
    RPGApplication.Models.Joke joke = ViewBag.Joke;
}


<section class="container-fluid bg-black" style="background-image: url(/Images/Static/login.png); background-repeat: no-repeat; background-position: bottom right;">

    <div class="flash-message">
        @Vereyon.Web.FlashMessageHtmlHelper.RenderFlashMessages(Html)
    </div>


    <div class="row  mh-100-vh d-flex align-items-center justify-content-center">

        <div class="col-md-3">

            @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { autocomplete = "off" }))
            {
                <div>
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label text-white font-weight-bold" })
                        @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control red-input", required = "required" } })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label text-white  font-weight-bold" })
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control red-input", required = "required" } })
                        @Html.ValidationMessage("nullFields", new { @class = "text-danger" })
                        @Html.ValidationMessage("deniedAuthentication", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn login-button btn-block mt-4" />

                    </div>
                    <div class="form-group">
                        @Html.ActionLink("Registrar", "Register", null, new { @class = "text-white" })
                    </div>
                </div>

            }

            <div class="pt-3 joke text-white">
                <h5 class="joke-question">@joke.pergunta</h5>
                <br />
                <h7 class="joke-answer font-italic"> @joke.resposta</h7>

            </div>

        </div>

        <div class="col-md-6"></div>




    </div>

</section>