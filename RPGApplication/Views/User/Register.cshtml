
@{
    ViewBag.Title = "Register";
}


    @model RPGApplication.Models.User
    @using (Html.BeginForm("Register", "User", FormMethod.Post))
    {

        <div class="form-group">
            @Html.TextBoxFor(u => u.Email, new { @type = "email", @class = "form-control", placeholder = "E-mail" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(u => u.Login, new { @type = "text", @class = "form-control", placeholder = "Login" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(u => u.Name, new { @type = "text", @class = "form-control", placeholder = "Nome" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(u => u.LastName, new { @type = "text", @class = "form-control", placeholder = "Sobrenome" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(u => u.Password, new { @type = "password", @class = "form-control", placeholder = "Senha" })
        </div>


        <button type="submit" class="btn btn-primary">Enviar</button>

    }

