@model IEnumerable<RPGApplication.Models.User>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Index";
}


<section class="container-fluid">
    <div class="row py-5 mx-2">
        <div class="col-md-12">
            @Html.ActionLink("Cadastrar", "Create", null, new { @class = "btn btn-dark my-3" })
            <table class="table table-striped table-dark text-center">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Login)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Password)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AccessLevel)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ActiveAccount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SignUpDate)
                        </th>
                        <th scope="col">
                            Editar
                        </th>
                        <th scope="col">
                            Detalhes
                        </th>
                        <th scope="col">
                            Excluir
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Login)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Password)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccessLevel)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ActiveAccount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SignUpDate)
                            </td>

                            <td>
                                <a href=@Url.Action("Edit", "Users", new { id = item.UserId })>
                                    <i class="fas fa-edit text-white font-19"></i>
                                </a>
                            </td>
                            <td>
                                <a href=@Url.Action("Details", "Users", new { id = item.UserId })>
                                    <i class="fas fa-search text-white font-19"></i>
                                </a>
                            </td>
                            <td>
                                <a href=@Url.Action("Delete", "Users", new { id = item.UserId })>
                                    <i class="fas fa-trash-alt text-white font-19"></i>
                                </a>
                            </td>

                          
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>